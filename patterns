//reverse number pattern
#include<iostream>
using namespace std;


int main(){
    int n;
    cin>>n;
    int i=1;
    while(i<=n)
    {
        
        int j=1;
        while(j<=i)
        {
            cout<<i-j+1;
            j++;
        }
        cout<<endl;
        i++; 

     
}
}

//alpha pattern

#include<iostream>
using namespace std;


int main(){
    
    int n;
    cin>>n;
    int i=1;
    while(i<=n)
    {
        int j=1;
        while(j<=i)
        {
            char ch='A'+i-1;
            cout<<ch;
            j++;
        }
        cout<<endl;
        i++;
    }
    
}

//character pattern

#include<iostream>
using namespace std;


int main(){
     int n;
    cin>>n;
    int i=1;
    while(i<=n)
    {
        int j=1;
        while(j<=i)
        {
            char ch='A'+i-1+j-1;
            cout<<ch;
            j++;
        }
        cout<<endl;
        i++;

     
  
}
}
//interesting alphabets

#include<iostream>
using namespace std;


int main() {
    
     int n;
    cin>>n;
    int i=1;
    while(i<=n)
    {
        int j=1;
        while(j<=i)
        {
            char ch='A'+n-1-i+j;
            cout<<ch;
            j++;
        }
        cout<<endl;
        i++;
    
}
}
